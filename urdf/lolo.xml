<!--scenario-->
<robot name="$(arg robot_name)" fixed="false" self_collisions="false">

    <base_link name="Vehicle" type="compound" physics="submerged">
        <external_part name="Hull" type="model" physics="submerged" buoyant="false">
            <physical>
                <mesh filename="$(find lolo_simulation)/urdf/mesh/lolo.obj" scale="1.0"/>
                <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/>
            </physical>
            <visual>
                <mesh filename="$(find lolo_simulation)/urdf/mesh/lolo.obj" scale="1.0"/>
                <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/>
            </visual>
            <material name="Fiberglass"/>
            <look name="yellow"/>
            <compound_transform rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/>
            <mass value="135.0"/>
            <!-- <cg xyz="-0.419064 0.002501 0.000001" rpy="0.0 0.0 0.0"/> -->
        </external_part>
        <!--
        <internal_part name="WeightCylinder" type="cylinder" physics="submerged" buoyant="true">
            <dimensions radius="0.3" height="1.5"/>
            <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/>
            <material name="Neutral"/>
            <mass value="350.0"/>
            <look name="manipulator"/>
            <compound_transform rpy="0.0 1.571 0.0" xyz="-0.7 0.0 0.2"/>
        </internal_part>
        -->
        <internal_part name="WeightBlock" type="box" physics="submerged" buoyant="true">
            <!-- <dimensions radius="0.3" height="1.5"/> -->
            <dimensions xyz="1.7 0.8 0.3"/>
            <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/>
            <material name="Neutral"/>
            <mass value="270.0"/>
            <look name="manipulator"/>
            <compound_transform rpy="0.0 0.0 0.0" xyz="-0.7 0.0 0.17"/>
        </internal_part>
    </base_link>

    <!-- Actuators -->
    <actuator name="ThrusterSurge1" type="thruster">
        <link name="Vehicle"/>
        <origin rpy="0.0 0.0 3.1416" xyz="-2.85 -0.275 0.0"/>
        <specs thrust_coeff="0.5" torque_coeff="0.05" max_rpm="$(param lolo_max_rpm)" inverted="true"/>
        <propeller diameter="0.12" right="true">
            <mesh filename="$(find lolo_simulation)/urdf/mesh/propeller.obj" scale="1.0"/>
            <material name="Neutral"/>
            <look name="manipulator"/>
        </propeller>
    </actuator>

    <actuator name="ThrusterSurge2" type="thruster">
        <link name="Vehicle"/>
        <origin rpy="0.0 0.0 3.1416" xyz="-2.85 0.275 0.0"/>
        <specs thrust_coeff="0.5" torque_coeff="0.05" max_rpm="$(param lolo_max_rpm)" inverted="false"/>
        <propeller diameter="0.12" right="false">
            <mesh filename="$(find lolo_simulation)/urdf/mesh/propeller.obj" scale="1.0"/>
            <material name="Neutral"/>
            <look name="manipulator"/>
        </propeller>
    </actuator>

    <actuator name="Elevator" type="rudder">
        <link name="Vehicle"/>
        <origin rpy="-1.5707 0.0 0.0" xyz="-2.68 0.0 0.0"/>
        <specs drag_coeff="2.0" lift_coeff="3.0" max_angle="0.6" inverted="false" area="0.12"/>
        <visual>
            <mesh filename="$(find lolo_simulation)/urdf/mesh/back_fin.obj" scale="1.0"/>
            <material name="Neutral"/>
            <look name="manipulator"/>
            <origin rpy="1.5707 0.0 0.0" xyz="0.0 0.0 0.0"/>
        </visual>
    </actuator>

    <actuator name="RudderPort" type="rudder">
        <link name="Vehicle"/>
        <origin rpy="0.0 0.0 0.0" xyz="-2.4 0.275 0.0"/>
        <specs drag_coeff="2.0" lift_coeff="3.0" max_angle="0.6" inverted="false" area="0.06"/>
        <visual>
            <mesh filename="$(find lolo_simulation)/urdf/mesh/fin.obj" scale="1.0"/>
            <material name="Neutral"/>
            <look name="manipulator"/>
            <origin rpy="1.5707 0.0 0.0" xyz="0.0 0.0 0.0"/>
        </visual>
    </actuator>

    <actuator name="RudderStbd" type="rudder">
        <link name="Vehicle"/>
        <origin rpy="0.0 0.0 0.0" xyz="-2.4 -0.275 0.0"/>
        <specs drag_coeff="2.0" lift_coeff="3.0" max_angle="0.6" inverted="false" area="0.06"/>
        <visual>
            <mesh filename="$(find lolo_simulation)/urdf/mesh/fin.obj" scale="1.0"/>
            <material name="Neutral"/>
            <look name="manipulator"/>
            <origin rpy="1.5707 0.0 0.0" xyz="0.0 0.0 0.0"/>
        </visual>
    </actuator>

    <actuator name="ElevonPort" type="rudder">
        <link name="Vehicle"/>
        <origin rpy="-1.5707 0.0 0.0" xyz="-0.8 0.5 0.0"/>
        <specs drag_coeff="2.0" lift_coeff="3.0" max_angle="0.6" inverted="false" area="0.06"/>
        <visual>
            <mesh filename="$(find lolo_simulation)/urdf/mesh/fin.obj" scale="1.0"/>
            <material name="Neutral"/>
            <look name="manipulator"/>
            <origin rpy="1.5707 0.0 0.0" xyz="0.0 0.0 0.0"/>
        </visual>
    </actuator>

    <actuator name="ElevonStbd" type="rudder">
        <link name="Vehicle"/>
        <origin rpy="1.5707 0.0 0.0" xyz="-0.8 -0.5 0.0"/>
        <specs drag_coeff="2.0" lift_coeff="3.0" max_angle="0.6" inverted="false" area="0.06"/>
        <visual>
            <mesh filename="$(find lolo_simulation)/urdf/mesh/fin.obj" scale="1.0"/>
            <material name="Neutral"/>
            <look name="manipulator"/>
            <origin rpy="1.5707 0.0 0.0" xyz="0.0 0.0 0.0"/>
        </visual>
    </actuator>

    <actuator name="VBSFrontStbd" type="vbs">
        <link name="Vehicle"/>
        <origin rpy="0.0 1.5707 0.0" xyz="-0.3 -0.35 0.0"/>
        <volume initial="0.00002">
            <mesh filename="$(find lolo_simulation)/urdf/mesh/vbs_min.obj"/>
            <mesh filename="$(find lolo_simulation)/urdf/mesh/vbs_max.obj"/>
        </volume>
        <ros_publisher topic="/$(arg robot_name)/sim/vbs_front_stbd/volume"/>
        <ros_subscriber topic="/$(arg robot_name)/sim/vbs_front_stbd/flow_rate"/>
    </actuator>

    <actuator name="VBSFrontPort" type="vbs">
        <link name="Vehicle"/>
        <origin rpy="0.0 1.5707 0.0" xyz="-0.3 0.35 0.0"/>
        <volume initial="0.00002">
            <mesh filename="$(find lolo_simulation)/urdf/mesh/vbs_min.obj"/>
            <mesh filename="$(find lolo_simulation)/urdf/mesh/vbs_max.obj"/>
        </volume>
        <ros_publisher topic="/$(arg robot_name)/sim/vbs_front_port/volume"/>
        <ros_subscriber topic="/$(arg robot_name)/sim/vbs_front_port/flow_rate"/>
    </actuator>

    <actuator name="VBSBackStbd" type="vbs">
        <link name="Vehicle"/>
        <origin rpy="0.0 1.5707 0.0" xyz="-1.3 -0.35 0.0"/>
        <volume initial="0.00002">
            <mesh filename="$(find lolo_simulation)/urdf/mesh/vbs_min.obj"/>
            <mesh filename="$(find lolo_simulation)/urdf/mesh/vbs_max.obj"/>
        </volume>
        <ros_publisher topic="/$(arg robot_name)/sim/vbs_back_stbd/volume"/>
        <ros_subscriber topic="/$(arg robot_name)/sim/vbs_back_stbd/flow_rate"/>
    </actuator>

    <actuator name="VBSBackPort" type="vbs">
        <link name="Vehicle"/>
        <origin rpy="0.0 1.5707 0.0" xyz="-1.3 0.35 0.0"/>
        <volume initial="0.00002">
            <mesh filename="$(find lolo_simulation)/urdf/mesh/vbs_min.obj"/>
            <mesh filename="$(find lolo_simulation)/urdf/mesh/vbs_max.obj"/>
        </volume>
        <ros_publisher topic="/$(arg robot_name)/sim/vbs_back_port/volume"/>
        <ros_subscriber topic="/$(arg robot_name)/sim/vbs_back_port/flow_rate"/>
    </actuator>

